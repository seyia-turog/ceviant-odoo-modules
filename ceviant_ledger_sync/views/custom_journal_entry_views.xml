<odoo>
    <record id="view_custom_journal_entry_form" model="ir.ui.view">
        <field name="name">custom.journal.entry.form</field>
        <field name="model">custom.journal.entry</field>
        <field name="arch" type="xml">
            <form string="Custom Journal Entry">
                <group>
                    <field name="transaction_date"/>
                    <field name="transaction_reference"/>
                    <field name="comments"/>
                    <field name="currency_id"/>
                </group>
                <notebook>
                    <page string="Credits">
                        <field name="credit_ids">
                            <tree>
                                <field name="gl_account_id"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Debits">
                        <field name="debit_ids">
                            <tree>
                                <field name="gl_account_id"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_custom_journal_entry_tree" model="ir.ui.view">
        <field name="name">custom.journal.entry.tree</field>
        <field name="model">custom.journal.entry</field>
        <field name="arch" type="xml">
            <tree string="Custom Journal Entries">
                <field name="transaction_date"/>
                <field name="transaction_reference"/>
                <field name="currency_id"/>
            </tree>
        </field>
    </record>
</odoo>
